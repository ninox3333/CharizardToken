---
import Analytics from "@vercel/analytics/astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>$CHZ Official Launchpad</title>
    <style>
      :root {
        color-scheme: dark;
        --bg-dark: #050309;
        --brand-fire: #ff7930;
        --brand-ember: #ffd166;
        --text-primary: #f7f7ff;
        --text-muted: rgba(247, 247, 255, 0.7);
        font-family: "Segoe UI", system-ui, sans-serif;
      }

      body {
        margin: 0;
        background: var(--bg-dark);
        color: var(--text-primary);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-image: radial-gradient(circle at top, rgba(255, 111, 28, 0.15), transparent 70%);
      }

      .container {
        max-width: 500px;
        width: 90%;
        background: rgba(17, 10, 26, 0.8);
        padding: 3rem;
        border-radius: 32px;
        border: 1px solid rgba(255, 121, 48, 0.3);
        backdrop-filter: blur(20px);
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
      }

      h1 {
        text-align: center;
        color: var(--brand-fire);
        margin-bottom: 0.5rem;
        letter-spacing: 2px;
      }

      .admin-badge {
        display: block;
        text-align: center;
        font-size: 0.7rem;
        background: #ff4c20;
        color: #000;
        padding: 2px 8px;
        border-radius: 4px;
        width: fit-content;
        margin: 0 auto 1.5rem;
        font-weight: 800;
      }

      p {
        text-align: center;
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-bottom: 2rem;
      }

      .status-box {
        background: rgba(0,0,0,0.3);
        padding: 1.5rem;
        border-radius: 16px;
        margin-bottom: 2rem;
        font-family: monospace;
        font-size: 0.85rem;
        border: 1px solid rgba(255,255,255,0.05);
        max-height: 200px;
        overflow-y: auto;
      }

      .btn {
        width: 100%;
        padding: 1.2rem;
        border-radius: 14px;
        border: none;
        font-weight: 800;
        cursor: pointer;
        transition: all 0.2s;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .btn-primary {
        background: linear-gradient(90deg, #ff7930, #ff4c20);
        color: #000;
        box-shadow: 0 5px 15px rgba(255, 76, 32, 0.3);
      }

      .btn-primary:active {
        transform: scale(0.98);
      }

      .btn-primary:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .btn-secondary {
        background: rgba(255,255,255,0.05);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.1);
      }

      .log-item {
        margin-bottom: 0.4rem;
        word-break: break-all;
      }

      .log-success { color: #4caf50; }
      .log-error { color: #f44336; }
      .log-info { color: #2196f3; }
    </style>
  </head>
  <body>
    <div class="container">
      <span class="admin-badge">OFFICIAL $CHZ AUTHORITY PANEL</span>
      <h1>BRAND THE FLAME</h1>
      <p>Register the name, symbol, and logo for your $CHZ token on the blockchain.</p>

      <div class="status-box" id="log-container">
        <div class="log-item" id="init-log">> Initializing Polyfills...</div>
      </div>

      <button id="connect-wallet" class="btn btn-secondary">1. Connect Authority Wallet</button>
      <button id="register-metadata" class="btn btn-primary" style="background: linear-gradient(90deg, #ffd166, #ff7930);" disabled>2. Register Name & Logo (FREE)</button>
      
      <div id="mint-address-display" style="margin-top: 2rem; text-align: center; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 1.5rem;">
        <span style="display:block; font-size: 0.75rem; color: var(--brand-ember); margin-bottom: 0.5rem;">TARGET TOKEN MINT:</span>
        <code id="mint-address" style="word-break: break-all; font-size: 0.9rem; color: #fff; background: rgba(0,0,0,0.4); padding: 10px; border-radius: 8px; display: block;">7pQ6NNrUN73n5xEFqczgG3Yox6ZzTzW5g7aYgC1EhkHe</code>
      </div>
    </div>

    <script>
      // 1. ROBUST POLYFILLS
      import { Buffer } from "buffer";
      import process from "process";
      import stream from "stream-browserify";

      window.Buffer = Buffer;
      window.process = process;
      window.stream = stream;
      globalThis.Buffer = Buffer;
      globalThis.process = process;

      // 2. IMPORTS
      import { Connection, PublicKey } from "@solana/web3.js";
      import { createUmi } from "@metaplex-foundation/umi-bundle-defaults";
      import { walletAdapterIdentity } from "@metaplex-foundation/umi-signer-wallet-adapters";
      import { 
        createMetadataAccountV3, 
        mplTokenMetadata, 
        findMetadataPda,
        LogoInstructionData
      } from "@metaplex-foundation/mpl-token-metadata";
      import { 
        publicKey as umiPublicKey, 
        none,
      } from "@metaplex-foundation/umi";
      import { fromWeb3JsPublicKey } from "@metaplex-foundation/umi-web3js-adapters";

      // 3. PARAMETERS
      const OWNER_WALLET = "9Vsan6w7QaGHDEbF1JcgruDVcbsS3xkEMgeZmAQGJ5wP";
      const MINT_ADDRESS = "7pQ6NNrUN73n5xEFqczgG3Yox6ZzTzW5g7aYgC1EhkHe";
      const METADATA_URI = "https://raw.githubusercontent.com/ninox3333/CharizardToken/main/public/metadata.json";

      let walletAddress = null;
      const logContainer = document.getElementById('log-container');
      const initLog = document.getElementById('init-log');
      const connectBtn = document.getElementById('connect-wallet');
      const metadataBtn = document.getElementById('register-metadata');

      function log(msg, type = 'info') {
        const div = document.createElement('div');
        div.className = `log-item log-${type}`;
        div.innerText = `> ${msg}`;
        logContainer.appendChild(div);
        logContainer.scrollTop = logContainer.scrollHeight;
      }

      if (initLog) initLog.innerText = "> Polyfills loaded. Engine Ready.";

      async function connect() {
        log("Accessing Phantom...", "info");
        try {
          const { solana } = window;
          if (solana?.isPhantom) {
            const res = await solana.connect();
            walletAddress = res.publicKey.toString();
            
            if (walletAddress !== OWNER_WALLET) {
              log(`AUTH ALERT: Connected wallet (${walletAddress}) is not the Authority!`, "error");
            } else {
              log(`Authority wallet verified: ${walletAddress}`, 'success');
              connectBtn.innerText = `CONNECTED: ${walletAddress.slice(0,6)}...`;
              metadataBtn.disabled = false;
            }
          } else {
            log("Phantom Wallet not found.", "error");
            window.open('https://phantom.app/', '_blank');
          }
        } catch (err) {
          log(`Connection failed: ${err.message}`, "error");
        }
      }

      async function register() {
        if (!walletAddress) return;
        metadataBtn.disabled = true;
        log("Initializing Metaplex Umi...", "info");

        try {
          const umi = createUmi("https://solana-rpc.publicnode.com")
            .use(mplTokenMetadata())
            .use(walletAdapterIdentity(window.solana));

          const mint = umiPublicKey(MINT_ADDRESS);
          const metadata = findMetadataPda(umi, { mint });

          log(`Registering Branding for ${MINT_ADDRESS}...`, "info");

          const transaction = createMetadataAccountV3(umi, {
            metadata,
            mint,
            mintAuthority: umi.identity,
            payer: umi.identity,
            updateAuthority: fromWeb3JsPublicKey(new PublicKey(OWNER_WALLET)),
            data: {
              name: "Charizard Token",
              symbol: "CHZ",
              uri: METADATA_URI,
              sellerFeeBasisPoints: 0,
              creators: none(),
              collection: none(),
              uses: none(),
            },
            isMutable: true,
            collectionDetails: none(),
          });

          log("PLEASE SIGN IN PHANTOM TO RECORD BRANDING...", "success");
          const result = await transaction.sendAndConfirm(umi);
          
          log("ðŸ”¥ BRANDING REGISTERED SUCCESSFULLY!", "success");
          log("The logo and name will appear on Solscan and Phantom shortly.", "success");
          metadataBtn.innerText = "BRANDING SUCCESSFUL";

        } catch (err) {
          log(`Error: ${err.message}`, "error");
          console.error(err);
          metadataBtn.disabled = false;
        }
      }

      connectBtn.addEventListener('click', connect);
      metadataBtn.addEventListener('click', register);
    </script>
  </body>
</html>
