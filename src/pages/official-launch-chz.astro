---
import Analytics from "@vercel/analytics/astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>$CHZ Official Launchpad</title>
    <style>
      :root {
        color-scheme: dark;
        --bg-dark: #050309;
        --brand-fire: #ff7930;
        --brand-ember: #ffd166;
        --text-primary: #f7f7ff;
        --text-muted: rgba(247, 247, 255, 0.7);
        font-family: "Segoe UI", system-ui, sans-serif;
      }

      body {
        margin: 0;
        background: var(--bg-dark);
        color: var(--text-primary);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-image: radial-gradient(circle at top, rgba(255, 111, 28, 0.15), transparent 70%);
      }

      .container {
        max-width: 500px;
        width: 90%;
        background: rgba(17, 10, 26, 0.8);
        padding: 3rem;
        border-radius: 32px;
        border: 1px solid rgba(255, 121, 48, 0.3);
        backdrop-filter: blur(20px);
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
      }

      h1 {
        text-align: center;
        color: var(--brand-fire);
        margin-bottom: 0.5rem;
        letter-spacing: 2px;
      }

      .admin-badge {
        display: block;
        text-align: center;
        font-size: 0.7rem;
        background: #ff4c20;
        color: #000;
        padding: 2px 8px;
        border-radius: 4px;
        width: fit-content;
        margin: 0 auto 1.5rem;
        font-weight: 800;
      }

      p {
        text-align: center;
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-bottom: 2rem;
      }

      .status-box {
        background: rgba(0,0,0,0.3);
        padding: 1.5rem;
        border-radius: 16px;
        margin-bottom: 2rem;
        font-family: monospace;
        font-size: 0.85rem;
        border: 1px solid rgba(255,255,255,0.05);
        max-height: 200px;
        overflow-y: auto;
      }

      .btn {
        width: 100%;
        padding: 1.2rem;
        border-radius: 14px;
        border: none;
        font-weight: 800;
        cursor: pointer;
        transition: all 0.2s;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .btn-primary {
        background: linear-gradient(90deg, #ff7930, #ff4c20);
        color: #000;
        box-shadow: 0 5px 15px rgba(255, 76, 32, 0.3);
      }

      .btn-primary:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 76, 32, 0.4);
      }

      .btn-primary:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .btn-secondary {
        background: rgba(255,255,255,0.05);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.1);
      }

      .log-item {
        margin-bottom: 0.4rem;
      }

      .log-success { color: #4caf50; }
      .log-error { color: #f44336; }
      .log-info { color: #2196f3; }
    </style>
  </head>
  <body>
    <div class="container">
      <span class="admin-badge">PRIVATE ADMIN PANEL</span>
      <h1>LAUNCH OFFICIAL $CHZ</h1>
      <p>This will create the token with 1B supply & mint it to your wallet.</p>

      <div class="status-box" id="log-container">
        <div class="log-item">Awaiting authorized connection...</div>
      </div>

      <button id="connect-wallet" class="btn btn-secondary">1. Connect Authority Wallet</button>
      <button id="launch-token" class="btn btn-primary" disabled>2. Ignite $CHZ Launch</button>
      <button id="register-metadata" class="btn btn-primary" style="background: linear-gradient(90deg, #ffd166, #ff7930);" disabled>3. Register Name & Logo</button>
      
      <div id="mint-address-display" style="display:none; margin-top: 2rem; text-align: center; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 1.5rem;">
        <span style="display:block; font-size: 0.75rem; color: var(--brand-ember); margin-bottom: 0.5rem;">OFFICIAL TOKEN MINT ADDRESS:</span>
        <code id="mint-address" style="word-break: break-all; font-size: 0.9rem; color: #fff; background: rgba(0,0,0,0.4); padding: 10px; border-radius: 8px; display: block;"></code>
      </div>
    </div>

    <script>
      import { Buffer } from "buffer";
      window.Buffer = Buffer;

      import { 
        Connection, 
        PublicKey, 
        Transaction, 
        SystemProgram, 
        Keypair 
      } from "@solana/web3.js";
      import { 
        createInitializeMintInstruction, 
        getAssociatedTokenAddress, 
        createAssociatedTokenAccountInstruction, 
        createMintToInstruction, 
        TOKEN_PROGRAM_ID, 
        MINT_SIZE 
      } from "@solana/spl-token";
      import { createUmi } from "@metaplex-foundation/umi-bundle-defaults";
      import { walletAdapterIdentity } from "@metaplex-foundation/umi-signer-wallet-adapters";
      import { 
        createMetadataAccountV3, 
        mplTokenMetadata, 
        findMetadataPda 
      } from "@metaplex-foundation/mpl-token-metadata";
      import { 
        publicKey as umiPublicKey, 
        none
      } from "@metaplex-foundation/umi";
      import { fromWeb3JsPublicKey } from "@metaplex-foundation/umi-web3js-adapters";

      // Official Parameters
      const OWNER_WALLET = "9Vsan6w7QaGHDEbF1JcgruDVcbsS3xkEMgeZmAQGJ5wP";
      const TOKEN_DECIMALS = 9;
      const TOTAL_SUPPLY = 1000000000;
      const METADATA_URI = "https://raw.githubusercontent.com/ninox3333/CharizardToken/main/public/metadata.json";

      let walletAddress = null;
      let currentMint = "7pQ6NNrUN73n5xEFqczgG3Yox6ZzTzW5g7aYgC1EhkHe";
      
      const logContainer = document.getElementById('log-container');
      const connectBtn = document.getElementById('connect-wallet');
      const launchBtn = document.getElementById('launch-token');
      const metadataBtn = document.getElementById('register-metadata');
      const mintDisplay = document.getElementById('mint-address-display');
      const mintCode = document.getElementById('mint-address');

      function log(msg, type = 'info') {
        const div = document.createElement('div');
        div.className = `log-item log-${type}`;
        div.innerText = `> ${msg}`;
        logContainer.appendChild(div);
        logContainer.scrollTop = logContainer.scrollHeight;
      }

      async function connect() {
        try {
          const { solana } = window;
          if (solana?.isPhantom) {
            const res = await solana.connect();
            walletAddress = res.publicKey.toString();
            
            if (walletAddress !== OWNER_WALLET) {
              log(`WARNING: Connected wallet (${walletAddress}) does not match Owner Wallet!`, "error");
            }
            
            connectBtn.innerText = `CONNECTED: ${walletAddress.slice(0,6)}...`;
            connectBtn.style.borderColor = '#4caf50';
            launchBtn.disabled = false;
            metadataBtn.disabled = false;
            log(`Authority wallet connected: ${walletAddress}`, 'success');
          } else {
            log("Phantom Wallet not found!", "error");
            window.open('https://phantom.app/', '_blank');
          }
        } catch (err) {
          log(err.message, "error");
        }
      }

      async function launch() {
        if (!walletAddress) return;
        launchBtn.disabled = true;
        log("Official Ignition sequence initiated...", "info");

        try {
          const RPC_ENDPOINTS = [
            "https://solana-rpc.publicnode.com",
            "https://api.mainnet-beta.solana.com",
            "https://rpc.solana.com"
          ];

          let connection = null;
          let lastError = null;

          for (const url of RPC_ENDPOINTS) {
            try {
              log(`Connecting to node: ${url}...`, "info");
              const conn = new Connection(url, "confirmed");
              await conn.getLatestBlockhash();
              connection = conn;
              log(`Connected successfully to ${url}`, "success");
              break;
            } catch (e) {
              lastError = e;
              log(`Node ${url} failed: ${e.message}`, "error");
            }
          }

          if (!connection) throw lastError;
          
          const payer = new PublicKey(walletAddress);
          const mintKeypair = Keypair.generate();
          log(`Generating secure mint account...`, "info");

          const lamports = await connection.getMinimumBalanceForRentExemption(MINT_SIZE);
          log(`Reserving storage space on-chain...`, "info");

          const createAccountIx = SystemProgram.createAccount({
            fromPubkey: payer,
            newAccountPubkey: mintKeypair.publicKey,
            space: MINT_SIZE,
            lamports,
            programId: TOKEN_PROGRAM_ID,
          });

          const initMintIx = createInitializeMintInstruction(
            mintKeypair.publicKey,
            TOKEN_DECIMALS,
            payer,
            payer
          );

          const ataAddress = await getAssociatedTokenAddress(
            mintKeypair.publicKey,
            payer
          );

          const createAtaIx = createAssociatedTokenAccountInstruction(
            payer,
            ataAddress,
            payer,
            mintKeypair.publicKey
          );

          const mintToIx = createMintToInstruction(
            mintKeypair.publicKey,
            ataAddress,
            payer,
            TOTAL_SUPPLY * Math.pow(10, TOKEN_DECIMALS)
          );

          const transaction = new Transaction().add(
            createAccountIx,
            initMintIx,
            createAtaIx,
            mintToIx
          );

          const { blockhash } = await connection.getLatestBlockhash();
          transaction.recentBlockhash = blockhash;
          transaction.feePayer = payer;
          transaction.partialSign(mintKeypair);

          log("PLEASE SIGN IN PHANTOM TO DEPLOY $CHZ...", "info");
          const { signature } = await window.solana.signAndSendTransaction(transaction);
          
          log(`Deployment transaction sent!`, "info");
          log("Waiting for network confirmation...", "info");

          await connection.confirmTransaction(signature);
          
          currentMint = mintKeypair.publicKey.toString();
          log("ðŸ”¥ $CHZ TOKEN HAS BEEN CREATED!", "success");
          log(`1,000,000,000 $CHZ are now in your wallet.`, "success");
          
          mintDisplay.style.display = 'block';
          mintCode.innerText = currentMint;
          launchBtn.innerText = "TOKEN DEPLOYED";
          
          log("IMPORTANT: Now proceed to register metadata.", "success");

        } catch (err) {
          log(`Deployment failed: ${err.message}`, "error");
          launchBtn.disabled = false;
        }
      }

      async function registerMetadata() {
        if (!walletAddress) return;
        metadataBtn.disabled = true;
        log("Initiating Metadata Registration...", "info");

        try {
          const umi = createUmi("https://solana-rpc.publicnode.com")
            .use(mplTokenMetadata())
            .use(walletAdapterIdentity(window.solana));

          const mint = umiPublicKey(currentMint);
          const metadata = findMetadataPda(umi, { mint });

          log(`Mint: ${currentMint}`, "info");
          log(`Registering: Charizard Token ($CHZ)...`, "info");

          const transaction = createMetadataAccountV3(umi, {
            metadata,
            mint,
            mintAuthority: umi.identity,
            payer: umi.identity,
            updateAuthority: fromWeb3JsPublicKey(new PublicKey(OWNER_WALLET)),
            data: {
              name: "Charizard Token",
              symbol: "CHZ",
              uri: METADATA_URI,
              sellerFeeBasisPoints: 0,
              creators: none(),
              collection: none(),
              uses: none(),
            },
            isMutable: true,
            collectionDetails: none(),
          });

          log("PLEASE SIGN IN PHANTOM TO REGISTER METADATA...", "info");
          const result = await transaction.sendAndConfirm(umi);
          
          log("ðŸ”¥ METADATA REGISTERED SUCCESSFULLY!", "success");
          log("Solscan and Wallets will update soon with the Name and Logo.", "success");
          metadataBtn.innerText = "METADATA REGISTERED";

        } catch (err) {
          log(`Metadata registration failed: ${err.message}`, "error");
          metadataBtn.disabled = false;
        }
      }

      connectBtn.addEventListener('click', connect);
      launchBtn.addEventListener('click', launch);
      metadataBtn.addEventListener('click', registerMetadata);
    </script>
  </body>
</html>
