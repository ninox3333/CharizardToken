---
import Analytics from "@vercel/analytics/astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>$CHZ Branding Panel | Authority Only</title>
    <style>
      :root {
        color-scheme: dark;
        --bg: #050309;
        --fire: #ff7930;
        --text: #f7f7ff;
        font-family: system-ui, sans-serif;
      }

      body {
        margin: 0;
        background: var(--bg);
        color: var(--text);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-image: radial-gradient(circle at center, rgba(255, 111, 28, 0.05) 0%, transparent 70%);
      }

      .card {
        max-width: 500px;
        width: 90%;
        background: rgba(17, 10, 26, 0.9);
        padding: 2.5rem;
        border-radius: 24px;
        border: 1px solid rgba(255, 121, 48, 0.3);
        box-shadow: 0 50px 100px rgba(0,0,0,0.8);
      }

      h1 { color: var(--fire); text-align: center; margin-bottom: 2rem; }

      .console {
        background: #000;
        padding: 1.2rem;
        border-radius: 12px;
        font-family: monospace;
        font-size: 0.85rem;
        border: 1px solid #333;
        margin-bottom: 1.5rem;
        height: 150px;
        overflow-y: auto;
        color: #ffd166;
      }

      .btn {
        width: 100%;
        padding: 1rem;
        border-radius: 12px;
        border: none;
        font-weight: 800;
        cursor: pointer;
        text-transform: uppercase;
        margin-bottom: 1rem;
        transition: 0.2s;
      }

      .btn-primary { background: var(--fire); color: #000; }
      .btn-primary:disabled { opacity: 0.3; cursor: not-allowed; }
      .btn-secondary { background: rgba(255,255,255,0.1); color: #fff; }

      .log-success { color: #4caf50; }
      .log-error { color: #ff5252; }
    </style>
  </head>
  <body>
    <!-- EXTREME POLYFILLS TO KILL THE PROTOTYPE ERROR -->
    <script is:inline>
      window.global = window;
      window.process = { env: {}, nextTick: (fn) => setTimeout(fn, 0) };
      
      // Mocking stream to avoid prototype error in Metaplex
      if (typeof window.EventEmitter === 'undefined') {
        window.EventEmitter = function() {};
        window.EventEmitter.prototype.on = function() {};
        window.EventEmitter.prototype.once = function() {};
        window.EventEmitter.prototype.emit = function() {};
      }
      
      const Readable = function() {};
      Readable.prototype.on = function() {};
      
      window.stream = {
        Readable: Readable,
        Writable: function() {},
        Transform: function() {},
        PassThrough: function() {},
        Stream: function() {}
      };
    </script>

    <div class="card">
      <h1>$CHZ MANAGER</h1>
      <p style="font-size: 0.8rem; text-align: center; margin-top: -1.5rem; opacity: 0.5;">Target: <code>7pQ6NN...He</code></p>
      
      <div id="status-log" class="console">
        > Engine initialized. Awaiting owner wallet...
      </div>

      <button id="btn-connect" class="btn btn-secondary">1. Connect Authority Wallet</button>
      <button id="btn-brand" class="btn btn-primary" disabled>2. Register Brand & Logo (FREE)</button>
      
      <p style="text-align: center; font-size: 0.7rem; opacity: 0.4;">Est. Fee: 0.015 SOL (Network Only)</p>
    </div>

    <script>
      import { Buffer } from "buffer";
      window.Buffer = Buffer;
      globalThis.Buffer = Buffer;

      import { Connection, PublicKey } from "@solana/web3.js";
      
      const OWNER = "9Vsan6w7QaGHDEbF1JcgruDVcbsS3xkEMgeZmAQGJ5wP";
      const MINT = "7pQ6NNrUN73n5xEFqczgG3Yox6ZzTzW5g7aYgC1EhkHe";
      const JSON_URI = "https://raw.githubusercontent.com/ninox3333/CharizardToken/main/public/metadata.json";

      const logBox = document.getElementById('status-log');
      const btnConnect = document.getElementById('btn-connect');
      const btnBrand = document.getElementById('btn-brand');

      function log(msg, type = '') {
        const div = document.createElement('div');
        div.innerText = `> ${msg}`;
        if (type) div.className = `log-${type}`;
        logBox.appendChild(div);
        logBox.scrollTop = logBox.scrollHeight;
      }

      let wallet = null;

      btnConnect.onclick = async () => {
        try {
          const { solana } = window;
          if (!solana?.isPhantom) {
            log("Error: Phantom not found!", "error");
            return;
          }
          const resp = await solana.connect();
          wallet = resp.publicKey.toString();
          
          if (wallet !== OWNER) {
            log(`ALERT: Access denied for ${wallet.slice(0,6)}...`, "error");
            log(`Switch to official owner wallet in Phantom.`, "error");
            return;
          }

          log(`Authority verified: ${wallet.slice(0,10)}...`, "success");
          btnConnect.innerText = "OWNER CONNECTED";
          btnBrand.disabled = false;
        } catch (e) { log(e.message, "error"); }
      };

      btnBrand.onclick = async () => {
        btnBrand.disabled = true;
        log("Deploying branding sequence...", "info");
        
        try {
          // Dynamic load of Metaplex to ensure polyfills are ready
          const { createUmi } = await import("@metaplex-foundation/umi-bundle-defaults");
          const { walletAdapterIdentity } = await import("@metaplex-foundation/umi-signer-wallet-adapters");
          const { 
            createMetadataAccountV3, 
            mplTokenMetadata, 
            findMetadataPda 
          } = await import("@metaplex-foundation/mpl-token-metadata");
          const { publicKey: umiPublicKey, none } = await import("@metaplex-foundation/umi");
          const { fromWeb3JsPublicKey } = await import("@metaplex-foundation/umi-web3js-adapters");

          log("Establishing blockchain bridge...");
          const umi = createUmi("https://solana-rpc.publicnode.com") // Using a more stable RPC
            .use(mplTokenMetadata())
            .use(walletAdapterIdentity(window.solana));

          const mint = umiPublicKey(MINT);
          const metadata = findMetadataPda(umi, { mint });

          log("Building Metadata packet...");
          const tx = createMetadataAccountV3(umi, {
            metadata,
            mint,
            mintAuthority: umi.identity,
            payer: umi.identity,
            updateAuthority: fromWeb3JsPublicKey(new PublicKey(OWNER)),
            data: {
              name: "Charizard Token",
              symbol: "CHZ",
              uri: JSON_URI,
              sellerFeeBasisPoints: 0,
              creators: none(),
              collection: none(),
              uses: none(),
            },
            isMutable: true,
            collectionDetails: none(),
          });

          log("PHANTOM: Approve official registration (FREE)...", "success");
          const result = await tx.sendAndConfirm(umi);
          
          log("ðŸ”¥ BRANDING COMPLETE! LFG!", "success");
          log("Check Solscan/Phantom in 2 mins.", "success");
          btnBrand.innerText = "SUCCESSFUL";
        } catch (e) {
          log(`Fail: ${e.message}`, "error");
          console.error(e);
          btnBrand.disabled = false;
        }
      };
    </script>
  </body>
</html>
