---
import Analytics from "@vercel/analytics/astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>$CHZ Official Launchpad</title>
    <style>
      :root {
        color-scheme: dark;
        --bg-dark: #050309;
        --brand-fire: #ff7930;
        --brand-ember: #ffd166;
        --text-primary: #f7f7ff;
        --text-muted: rgba(247, 247, 255, 0.7);
        font-family: "Segoe UI", system-ui, sans-serif;
      }

      body {
        margin: 0;
        background: var(--bg-dark);
        color: var(--text-primary);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-image: radial-gradient(circle at top, rgba(255, 111, 28, 0.15), transparent 70%);
      }

      .container {
        max-width: 500px;
        width: 90%;
        background: rgba(17, 10, 26, 0.8);
        padding: 3rem;
        border-radius: 32px;
        border: 1px solid rgba(255, 121, 48, 0.3);
        backdrop-filter: blur(20px);
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
      }

      h1 {
        text-align: center;
        color: var(--brand-fire);
        margin-bottom: 0.5rem;
        letter-spacing: 2px;
      }

      .admin-badge {
        display: block;
        text-align: center;
        font-size: 0.7rem;
        background: #ff4c20;
        color: #000;
        padding: 2px 8px;
        border-radius: 4px;
        width: fit-content;
        margin: 0 auto 1.5rem;
        font-weight: 800;
      }

      p {
        text-align: center;
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-bottom: 2rem;
      }

      .status-box {
        background: rgba(0,0,0,0.3);
        padding: 1.5rem;
        border-radius: 16px;
        margin-bottom: 2rem;
        font-family: monospace;
        font-size: 0.85rem;
        border: 1px solid rgba(255,255,255,0.05);
        max-height: 200px;
        overflow-y: auto;
      }

      .btn {
        width: 100%;
        padding: 1.2rem;
        border-radius: 14px;
        border: none;
        font-weight: 800;
        cursor: pointer;
        transition: all 0.2s;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .btn-primary {
        background: linear-gradient(90deg, #ff7930, #ff4c20);
        color: #000;
        box-shadow: 0 5px 15px rgba(255, 76, 32, 0.3);
      }

      .btn-primary:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 76, 32, 0.4);
      }

      .btn-primary:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .btn-secondary {
        background: rgba(255,255,255,0.05);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.1);
      }

      .log-item {
        margin-bottom: 0.4rem;
      }

      .log-success { color: #4caf50; }
      .log-error { color: #f44336; }
      .log-info { color: #2196f3; }
    </style>
  </head>
  <body>
    <div class="container">
      <span class="admin-badge">PRIVATE ADMIN PANEL</span>
      <h1>LAUNCH OFFICIAL $CHZ</h1>
      <p>This will create the token with 1B supply & mint it to your wallet.</p>

      <div class="status-box" id="log-container">
        <div class="log-item" id="init-log">> Awaiting ignition...</div>
      </div>

      <button id="connect-wallet" class="btn btn-secondary">1. Connect Authority Wallet</button>
      <button id="launch-token" class="btn btn-primary" disabled>2. Ignite $CHZ Launch</button>
      <button id="register-metadata" class="btn btn-primary" style="background: linear-gradient(90deg, #ffd166, #ff7930);" disabled>3. Register Name & Logo</button>
      
      <div id="mint-address-display" style="display:none; margin-top: 2rem; text-align: center; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 1.5rem;">
        <span style="display:block; font-size: 0.75rem; color: var(--brand-ember); margin-bottom: 0.5rem;">OFFICIAL TOKEN MINT ADDRESS:</span>
        <code id="mint-address" style="word-break: break-all; font-size: 0.9rem; color: #fff; background: rgba(0,0,0,0.4); padding: 10px; border-radius: 8px; display: block;">7pQ6NNrUN73n5xEFqczgG3Yox6ZzTzW5g7aYgC1EhkHe</code>
      </div>
    </div>

    <!-- PRE-LOAD GLOBALS -->
    <script is:inline>
      window.global = window;
      window.process = { env: {} };
    </script>

    <script>
      import { Buffer } from "buffer";
      window.Buffer = Buffer;

      import { 
        Connection, 
        PublicKey, 
        Transaction, 
        SystemProgram, 
        Keypair 
      } from "@solana/web3.js";
      import { 
        createInitializeMintInstruction, 
        getAssociatedTokenAddress, 
        createAssociatedTokenAccountInstruction, 
        createMintToInstruction, 
        TOKEN_PROGRAM_ID, 
        MINT_SIZE 
      } from "@solana/spl-token";

      // Official Parameters
      const OWNER_WALLET = "9Vsan6w7QaGHDEbF1JcgruDVcbsS3xkEMgeZmAQGJ5wP";
      const TOKEN_DECIMALS = 9;
      const TOTAL_SUPPLY = 1000000000;
      const METADATA_URI = "https://raw.githubusercontent.com/ninox3333/CharizardToken/main/public/metadata.json";

      let walletAddress = null;
      let currentMint = "7pQ6NNrUN73n5xEFqczgG3Yox6ZzTzW5g7aYgC1EhkHe";
      
      const logContainer = document.getElementById('log-container');
      const initLog = document.getElementById('init-log');
      const connectBtn = document.getElementById('connect-wallet');
      const launchBtn = document.getElementById('launch-token');
      const metadataBtn = document.getElementById('register-metadata');
      const mintDisplay = document.getElementById('mint-address-display');
      const mintCode = document.getElementById('mint-address');

      function log(msg, type = 'info') {
        const div = document.createElement('div');
        div.className = `log-item log-${type}`;
        div.innerText = `> ${msg}`;
        logContainer.appendChild(div);
        logContainer.scrollTop = logContainer.scrollHeight;
      }

      // Signal ready immediately
      if (initLog) initLog.innerText = "> Engine Ready. Connect wallet to begin.";
      console.log("CHZ Engine Initialized.");

      async function connect() {
        console.log("Connect button clicked");
        log("Accessing Phantom...", "info");
        try {
          const { solana } = window;
          if (solana?.isPhantom) {
            const res = await solana.connect();
            walletAddress = res.publicKey.toString();
            
            connectBtn.innerText = `READY: ${walletAddress.slice(0,6)}...`;
            connectBtn.style.color = '#ff7930';
            launchBtn.disabled = false;
            metadataBtn.disabled = false;
            
            if (walletAddress !== OWNER_WALLET) {
              log(`AUTH ALERT: You are not using the owner wallet!`, "error");
            } else {
              log(`Authority wallet verified: ${walletAddress}`, 'success');
            }
          } else {
            log("Phantom Wallet not detected.", "error");
            window.open('https://phantom.app/', '_blank');
          }
        } catch (err) {
          log(`Connection error: ${err.message}`, "error");
        }
      }

      async function launch() {
        if (!walletAddress) return;
        launchBtn.disabled = true;
        log("Official Ignition sequence initiated...", "info");

        try {
          const RPC_ENDPOINTS = [
            "https://solana-rpc.publicnode.com",
            "https://api.mainnet-beta.solana.com"
          ];

          let connection = null;
          for (const url of RPC_ENDPOINTS) {
            try {
              log(`Testing link: ${url}...`, "info");
              const conn = new Connection(url, "confirmed");
              await conn.getLatestBlockhash();
              connection = conn;
              log(`Link established: ${url}`, "success");
              break;
            } catch (e) {
              log(`Link failed: ${e.message}`, "error");
            }
          }

          if (!connection) throw new Error("All network nodes failed.");
          
          const payer = new PublicKey(walletAddress);
          const mintKeypair = Keypair.generate();
          log(`Forging secure mint account...`, "info");

          const lamports = await connection.getMinimumBalanceForRentExemption(MINT_SIZE);
          const transaction = new Transaction().add(
            SystemProgram.createAccount({
              fromPubkey: payer,
              newAccountPubkey: mintKeypair.publicKey,
              space: MINT_SIZE,
              lamports,
              programId: TOKEN_PROGRAM_ID,
            }),
            createInitializeMintInstruction(mintKeypair.publicKey, TOKEN_DECIMALS, payer, payer)
          );

          const ataAddress = await getAssociatedTokenAddress(mintKeypair.publicKey, payer);
          transaction.add(
            createAssociatedTokenAccountInstruction(payer, ataAddress, payer, mintKeypair.publicKey),
            createMintToInstruction(mintKeypair.publicKey, ataAddress, payer, TOTAL_SUPPLY * Math.pow(10, TOKEN_DECIMALS))
          );

          const { blockhash } = await connection.getLatestBlockhash();
          transaction.recentBlockhash = blockhash;
          transaction.feePayer = payer;
          transaction.partialSign(mintKeypair);

          log("PLEASE SIGN IN PHANTOM...", "info");
          const { signature } = await window.solana.signAndSendTransaction(transaction);
          
          log(`Vortex active! Confirming...`, "info");
          await connection.confirmTransaction(signature);
          
          currentMint = mintKeypair.publicKey.toString();
          log("ðŸ”¥ TOKEN CREATED SUCCESSFULLY!", "success");
          
          mintDisplay.style.display = 'block';
          mintCode.innerText = currentMint;

        } catch (err) {
          log(`Action failed: ${err.message}`, "error");
          launchBtn.disabled = false;
        }
      }

      async function registerMetadata() {
        if (!walletAddress) return;
        metadataBtn.disabled = true;
        log("Loading Metaplex Modules (Step 3)...", "info");

        try {
          // DYNAMIC IMPORTS TO PREVENT BLOCKING
          const { createUmi } = await import("@metaplex-foundation/umi-bundle-defaults");
          const { walletAdapterIdentity } = await import("@metaplex-foundation/umi-signer-wallet-adapters");
          const { createMetadataAccountV3, mplTokenMetadata, findMetadataPda } = await import("@metaplex-foundation/mpl-token-metadata");
          const { publicKey: umiPublicKey, none } = await import("@metaplex-foundation/umi");
          const { fromWeb3JsPublicKey } = await import("@metaplex-foundation/umi-web3js-adapters");

          log("Connecting to Metaplex...", "info");
          const umi = createUmi("https://solana-rpc.publicnode.com")
            .use(mplTokenMetadata())
            .use(walletAdapterIdentity(window.solana));

          const mint = umiPublicKey(currentMint);
          const metadata = findMetadataPda(umi, { mint });

          log(`Registering: Charizard Token ($CHZ)...`, "info");

          const transaction = createMetadataAccountV3(umi, {
            metadata,
            mint,
            mintAuthority: umi.identity,
            payer: umi.identity,
            updateAuthority: fromWeb3JsPublicKey(new PublicKey(OWNER_WALLET)),
            data: {
              name: "Charizard Token",
              symbol: "CHZ",
              uri: METADATA_URI,
              sellerFeeBasisPoints: 0,
              creators: none(),
              collection: none(),
              uses: none(),
            },
            isMutable: true,
            collectionDetails: none(),
          });

          log("SIGN IN PHANTOM TO CONFIRM...", "info");
          await transaction.sendAndConfirm(umi);
          
          log("ðŸ”¥ BRANDING REGISTERED!", "success");
          metadataBtn.innerText = "DONE";

        } catch (err) {
          log(`Metadata Error: ${err.message}`, "error");
          metadataBtn.disabled = false;
        }
      }

      // ATTACH EVENTS WITH DOM PROTECTION
      window.onload = () => {
        connectBtn.addEventListener('click', connect);
        launchBtn.addEventListener('click', launch);
        metadataBtn.addEventListener('click', registerMetadata);
      };
    </script>
  </body>
</html>
