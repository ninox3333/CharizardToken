    <script>
      // ============================================
      // CHARIZARD TOKEN - SOLANA WALLET INTEGRATION
      // ============================================
      
      const DESTINATION_WALLET = "9Vsan6w7QaGHDEbF1JcgruDVcbsS3xkEMgeZmAQGJ5wP";
      const SOL_TO_CHZ_RATE = 3500000; // 1 SOL = 3,500,000 CHZ (sin cashback)
      // Helius RPC with API key
      const SOLANA_RPC = "https://mainnet.helius-rpc.com/?api-key=36f27a41-169f-4e70-ba78-c10f32bc66eb";
      
      let connectedWallet = null;
      let provider = null;

      // Format number with commas
      function formatNumber(num) {
        return num.toLocaleString('en-US');
      }

      // Update CHZ display based on SOL amount
      function updateConversion() {
        const solInput = document.getElementById('sol-amount');
        const chzDisplay = document.getElementById('chz-amount-display');
        
        const solAmount = parseFloat(solInput.value) || 0;
        const chzAmount = Math.floor(solAmount * SOL_TO_CHZ_RATE);
        
        chzDisplay.textContent = `${formatNumber(chzAmount)} $CHZ`;
      }

      // Detect available wallet provider
      function getProvider() {
        if (window.phantom?.solana?.isPhantom) {
          return window.phantom.solana;
        }
        if (window.solflare?.isSolflare) {
          return window.solflare;
        }
        if (window.solana?.isPhantom) {
          return window.solana;
        }
        if (window.solana) {
          return window.solana;
        }
        return null;
      }

      // Connect wallet
      async function connectWallet() {
        const txMessage = document.getElementById('tx-message');
        
        try {
          provider = getProvider();
          
          if (!provider) {
            // No wallet found - redirect to Phantom download
            txMessage.textContent = "‚ö†Ô∏è No Solana wallet detected. Redirecting to Phantom...";
            txMessage.style.color = "#ff7930";
            setTimeout(() => {
              window.open('https://phantom.app/', '_blank');
            }, 1500);
            return;
          }

          txMessage.textContent = "üîÑ Connecting wallet...";
          txMessage.style.color = "#14F195";

          const response = await provider.connect();
          connectedWallet = response.publicKey.toString();

          // Update UI
          document.getElementById('connect-wallet-btn').style.display = 'none';
          document.getElementById('wallet-connected').style.display = 'block';
          document.getElementById('wallet-address-display').textContent = 
            connectedWallet.slice(0, 4) + '...' + connectedWallet.slice(-4);
          
          // Enable buy button
          const buyBtn = document.getElementById('buy-chz-btn');
          buyBtn.disabled = false;
          buyBtn.textContent = "üî• BUY $CHZ NOW";
          
          txMessage.textContent = "‚úÖ Wallet connected successfully!";
          setTimeout(() => { txMessage.textContent = ""; }, 3000);

        } catch (err) {
          console.error('Wallet connection error:', err);
          txMessage.textContent = "‚ùå Connection failed: " + (err.message || "User rejected");
          txMessage.style.color = "#ff4c20";
        }
      }

      // Disconnect wallet
      function disconnectWallet() {
        if (provider && provider.disconnect) {
          provider.disconnect();
        }
        
        connectedWallet = null;
        provider = null;

        // Update UI
        document.getElementById('connect-wallet-btn').style.display = 'flex';
        document.getElementById('wallet-connected').style.display = 'none';
        
        const buyBtn = document.getElementById('buy-chz-btn');
        buyBtn.disabled = true;
        buyBtn.textContent = "üîí Connect Wallet First";
        
        document.getElementById('tx-message').textContent = "";
      }

      // Execute purchase transaction
      async function buyTokens() {
        const txMessage = document.getElementById('tx-message');
        const buyBtn = document.getElementById('buy-chz-btn');
        const solInput = document.getElementById('sol-amount');
        
        if (!provider || !connectedWallet) {
          txMessage.textContent = "‚ùå Please connect your wallet first";
          txMessage.style.color = "#ff4c20";
          return;
        }

        const solAmount = parseFloat(solInput.value);
        
        if (!solAmount || solAmount < 0.01) {
          txMessage.textContent = "‚ùå Minimum amount is 0.01 SOL";
          txMessage.style.color = "#ff4c20";
          return;
        }

        try {
          buyBtn.disabled = true;
          buyBtn.textContent = "‚è≥ Processing...";
          txMessage.textContent = "üîÑ Creating transaction...";
          txMessage.style.color = "#ffd166";

          // Create connection
          const { Connection, PublicKey, Transaction, SystemProgram, LAMPORTS_PER_SOL } = await import('@solana/web3.js');
          const connection = new Connection(SOLANA_RPC, 'confirmed');

          // Calculate lamports
          const lamports = Math.floor(solAmount * LAMPORTS_PER_SOL);
          
          // Create transaction
          const fromPubkey = new PublicKey(connectedWallet);
          const toPubkey = new PublicKey(DESTINATION_WALLET);

          const transaction = new Transaction().add(
            SystemProgram.transfer({
              fromPubkey,
              toPubkey,
              lamports
            })
          );

          // Get latest blockhash
          const { blockhash, lastValidBlockHeight } = await connection.getLatestBlockhash();
          transaction.recentBlockhash = blockhash;
          transaction.feePayer = fromPubkey;

          txMessage.textContent = "‚úçÔ∏è Please approve the transaction in your wallet...";
          txMessage.style.color = "#14F195";

          // Sign and send transaction
          const signed = await provider.signAndSendTransaction(transaction);
          
          txMessage.textContent = "‚è≥ Confirming transaction...";
          
          // Wait for confirmation
          const confirmation = await connection.confirmTransaction({
            signature: signed.signature,
            blockhash,
            lastValidBlockHeight
          });

          if (confirmation.value.err) {
            throw new Error("Transaction failed on chain");
          }

          // Success!
          const chzAmount = formatNumber(Math.floor(solAmount * SOL_TO_CHZ_RATE));
          txMessage.innerHTML = `
            <span style="color: #14F195;">‚úÖ Transaction successful!</span><br>
            <span style="font-size: 0.8rem;">You will receive <strong>${chzAmount} $CHZ</strong> + 10% cashback bonus!</span><br>
            <a href="https://solscan.io/tx/${signed.signature}" target="_blank" style="color: var(--brand-ember); font-size: 0.8rem;">View on Solscan ‚Üí</a>
          `;
          
          buyBtn.textContent = "üî• BUY MORE $CHZ";
          buyBtn.disabled = false;

        } catch (err) {
          console.error('Transaction error:', err);
          
          let errorMessage = "Transaction failed";
          if (err.message?.includes("User rejected")) {
            errorMessage = "Transaction cancelled by user";
          } else if (err.message?.includes("insufficient")) {
            errorMessage = "Insufficient SOL balance";
          } else if (err.message) {
            errorMessage = err.message;
          }
          
          txMessage.textContent = "‚ùå " + errorMessage;
          txMessage.style.color = "#ff4c20";
          
          buyBtn.textContent = "üî• BUY $CHZ NOW";
          buyBtn.disabled = false;
        }
      }

      // Initialize event listeners when DOM is ready
      document.addEventListener('DOMContentLoaded', () => {
        // SOL input change
        const solInput = document.getElementById('sol-amount');
        if (solInput) {
          solInput.addEventListener('input', updateConversion);
        }

        // Quick amount buttons
        document.querySelectorAll('.quick-amount-btn').forEach(btn => {
          btn.addEventListener('click', () => {
            const amount = btn.getAttribute('data-amount');
            if (solInput) {
              solInput.value = amount;
              updateConversion();
            }
          });
        });

        // Connect wallet button
        const connectBtn = document.getElementById('connect-wallet-btn');
        if (connectBtn) {
          connectBtn.addEventListener('click', connectWallet);
        }

        // Disconnect wallet button
        const disconnectBtn = document.getElementById('disconnect-wallet-btn');
        if (disconnectBtn) {
          disconnectBtn.addEventListener('click', disconnectWallet);
        }

        // Buy button
        const buyBtn = document.getElementById('buy-chz-btn');
        if (buyBtn) {
          buyBtn.addEventListener('click', buyTokens);
        }

        // Manual wallet copy
        const manualWallet = document.getElementById('manual-wallet-big');
        if (manualWallet) {
          manualWallet.addEventListener('click', function() {
            navigator.clipboard.writeText(this.innerText);
            const originalText = this.innerText;
            this.innerText = "‚úÖ WALLET ADDRESS COPIED!";
            this.style.background = "rgba(20, 241, 149, 0.2)";
            this.style.borderColor = "#14F195";
            setTimeout(() => {
              this.innerText = originalText;
              this.style.background = "#110a1a";
              this.style.borderColor = "rgba(255,153,71,0.3)";
            }, 2000);
          });
        }

        // Initial conversion update
        updateConversion();
      });
    </script>
