---
import Analytics from "@vercel/analytics/astro";

const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Charizard Token ($CHZ) is a hyper-fast, deflationary crypto asset igniting wealth for its holders."
    />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/logo.png" />
    <link rel="apple-touch-icon" href="/assets/logo.png" />
    <title>Charizard Token | $CHZ</title>
    <style>
      :root {
        color-scheme: dark;
        --bg-dark: #050309;
        --bg-glow: #140515;
        --bg-accent: radial-gradient(circle at top, rgba(255, 111, 28, 0.32), transparent 58%);
        --brand-fire: #ff7930;
        --brand-dragon: #ff4c20;
        --brand-ember: #ffd166;
        --text-primary: #f7f7ff;
        --text-muted: rgba(247, 247, 255, 0.7);
        --card-bg: rgba(17, 10, 26, 0.68);
        font-family: "Segoe UI", "Inter", "Roboto", system-ui, -apple-system, sans-serif;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        background: var(--bg-dark);
        color: var(--text-primary);
        line-height: 1.6;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background-image: var(--bg-accent),
          radial-gradient(circle at bottom, rgba(255, 69, 0, 0.14), transparent 60%);
        background-attachment: fixed;
        overflow-x: hidden;
      }

      header {
        padding: 3.5rem 1.5rem 2.5rem;
        text-align: center;
        position: relative;
      }

      header::before {
        content: "";
        position: absolute;
        inset: 10% 12%;
        background: linear-gradient(120deg, rgba(255, 121, 48, 0.18), rgba(56, 17, 71, 0.05));
        filter: blur(80px);
        z-index: -1;
      }

      .logo {
        width: min(320px, 80vw);
        max-width: 280px;
        height: auto;
        margin: 0 auto 1.5rem;
        display: block;
        filter: drop-shadow(0 0 1.5rem rgba(255, 90, 0, 0.3));
      }

      h1 {
        font-size: clamp(2.3rem, 5vw, 3.4rem);
        margin: 0.5rem 0;
        letter-spacing: 0.04em;
        text-transform: uppercase;
      }

      p {
        margin: 0.75rem auto;
        max-width: 640px;
        color: var(--text-muted);
      }

      .cta {
        margin-top: 1.75rem;
        display: inline-flex;
        gap: 0.85rem;
        justify-content: center;
        align-items: center;
      }

      .cta a {
        padding: 0.85rem 1.7rem;
        border-radius: 999px;
        font-weight: 600;
        letter-spacing: 0.02em;
        text-decoration: none;
        transition: transform 120ms ease, box-shadow 120ms ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
      }

      .buy-steps {
        margin: 2.4rem auto 0;
        padding: 2rem 2.2rem;
        border-radius: 24px;
        background: linear-gradient(165deg, rgba(46, 15, 60, 0.7), rgba(20, 5, 25, 0.85));
        border: 2px solid rgba(255, 121, 48, 0.4);
        width: min(600px, 94vw);
        text-align: left;
        box-shadow: 0 1.5rem 3.5rem rgba(255, 76, 32, 0.15), 0 1rem 2.4rem rgba(10, 0, 18, 0.35);
        position: relative;
        overflow: hidden;
      }

      .buy-steps::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle at center, rgba(255, 121, 48, 0.1) 0%, transparent 70%);
        pointer-events: none;
      }

      .badge-urgent {
        display: inline-block;
        background: linear-gradient(90deg, #ff4c20, #ff7930);
        color: #100307;
        padding: 0.3rem 0.8rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 800;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        margin-bottom: 0.8rem;
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.05); }
        100% { opacity: 1; transform: scale(1); }
      }

      .offer-highlight {
        color: var(--brand-ember);
        font-weight: 700;
        display: block;
        margin: 0.5rem 0;
        font-size: 1.1rem;
      }

      .big-win {
        background: rgba(255, 209, 102, 0.1);
        border: 1px dashed var(--brand-ember);
        padding: 0.75rem;
        border-radius: 12px;
        margin: 1rem 0;
      }

      .buy-steps h3 {
        margin: 0 0 0.6rem;
        font-size: 1.1rem;
        letter-spacing: 0.03em;
        text-transform: uppercase;
        color: var(--brand-ember);
      }

      .buy-steps p {
        margin: 0.35rem 0;
        color: var(--text-muted);
      }

      .buy-steps code {
        font-family: "JetBrains Mono", "Fira Code", "SFMono-Regular", monospace;
        font-size: 0.95rem;
        color: var(--brand-ember);
        background: rgba(255, 121, 48, 0.1);
        padding: 0.2rem 0.4rem;
        border-radius: 8px;
        display: block;
        word-break: break-all;
        overflow-wrap: anywhere;
      }

      @media (max-width: 900px) {
        header {
          padding: 3.1rem 1.3rem 2.3rem;
        }

        main {
          padding: 2.3rem 1.3rem 3.6rem;
        }

        section {
          padding: 2rem 1.6rem;
        }

        .buy-steps {
          padding: 1.5rem 1.7rem;
        }
      }

      /* Solana Integration Styles (Global) */
