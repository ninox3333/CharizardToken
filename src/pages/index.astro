    <script>
      import { 
        Connection, 
        PublicKey, 
        Transaction, 
        SystemProgram, 
        LAMPORTS_PER_SOL 
      } from "@solana/web3.js";

      const DESTINATION_WALLET = "9Vsan6w7QaGHDEbF1JcgruDVcbsS3xkEMgeZmAQGJ5wP";
      const MINT_ADDRESS = "7pQ6NNrUN73n5xEFqczgG3Yox6ZzTzW5g7aYgC1EhkHe";
      const SOL_TO_CHZ_RATE = 3500000; // 1 SOL = 3,500,000 CHZ
      const CASHBACK_BONUS = 1.1; // 10% bonus

      let walletAddress = null;

      // DOM Elements
      const connectBtn = document.getElementById('connect-wallet');
      const buyTrigger = document.getElementById('quick-buy-trigger');
      const modal = document.getElementById('buy-modal');
      const modalClose = document.getElementById('modal-close');
      const solInput = document.getElementById('sol-amount');
      const chzDisplay = document.getElementById('chz-calc');
      const confirmBtn = document.getElementById('confirm-purchase');
      const txStatus = document.getElementById('tx-status');

      // Wallet Connection
      async function connectWallet() {
        try {
          const { solana } = window;
          if (solana && solana.isPhantom) {
            const response = await solana.connect();
            walletAddress = response.publicKey.toString();
            connectBtn.innerText = `Connected: ${walletAddress.slice(0, 4)}...${walletAddress.slice(-4)}`;
            connectBtn.style.background = '#4caf50';
            buyTrigger.disabled = false;
          } else {
            window.open('https://phantom.app/', '_blank');
          }
        } catch (err) {
          console.error(err);
        }
      }

      // Calculation
      function updateConversion() {
        const sol = parseFloat(solInput.value) || 0;
        const chz = Math.floor(sol * SOL_TO_CHZ_RATE * CASHBACK_BONUS);
        chzDisplay.innerText = `${chz.toLocaleString()} $CHZ`;
      }

      // Transaction
      async function sendTransaction() {
        if (!walletAddress) return;
        
        const amount = parseFloat(solInput.value);
        if (isNaN(amount) || amount <= 0) {
          txStatus.innerText = "âŒ Invalid amount";
          txStatus.style.color = "#ff4c20";
          return;
        }

        try {
          confirmBtn.disabled = true;
          txStatus.innerText = "âŒ› Waiting for approval...";
          txStatus.style.color = "#ffd166";

          // Using Extrnode public RPC which is usually more permissive for localhost.
          // Note: Some RPCs block localhost requests. If this fails, deploying to Vercel/Netlify usually fixes it.
          const connection = new Connection("https://solana-mainnet.rpc.extrnode.com", "confirmed");
          const fromPubkey = new PublicKey(walletAddress);
          const toPubkey = new PublicKey(DESTINATION_WALLET);

          const transaction = new Transaction().add(
            SystemProgram.transfer({
              fromPubkey,
              toPubkey,
              lamports: amount * LAMPORTS_PER_SOL,
            })
          );

          const { blockhash } = await connection.getLatestBlockhash();
          transaction.recentBlockhash = blockhash;
          transaction.feePayer = fromPubkey;

          const { signature } = await window.solana.signAndSendTransaction(transaction);
          
          txStatus.innerText = "ðŸš€ Transaction Sent! Processing...";
          txStatus.style.color = "#4caf50";

          // Confirm transaction
          await connection.confirmTransaction(signature);
          
          txStatus.innerText = "ðŸ”¥ SUCCESSS! WELCOME TO THE FLAME!";
          confirmBtn.innerText = "Transaction Confirmed!";
          
          setTimeout(() => {
            modal.style.display = 'none';
            txStatus.innerText = "";
            confirmBtn.disabled = false;
            confirmBtn.innerText = "Confirm & Send SOL";
          }, 3000);

        } catch (err) {
          console.error(err);
          txStatus.innerText = "âŒ Transaction Failed: " + (err.message || "Unknown error");
          txStatus.style.color = "#ff4c20";
          confirmBtn.disabled = false;
        }
      }

      // Event Listeners
      connectBtn.addEventListener('click', connectWallet);
      buyTrigger.addEventListener('click', () => modal.style.display = 'flex');
      modalClose.addEventListener('click', () => modal.style.display = 'none');
      solInput.addEventListener('input', updateConversion);
      confirmBtn.addEventListener('click', sendTransaction);

      // Close modal on outside click
      window.addEventListener('click', (e) => {
        if (e.target === modal) modal.style.display = 'none';
      });

      // Add Copy Click
      document.getElementById('contract-addr').addEventListener('click', function() {
        navigator.clipboard.writeText(this.innerText);
        const originalText = this.innerText;
        this.innerText = "COPIED TO CLIPBOARD!";
        setTimeout(() => this.innerText = originalText, 2000);
      });

      // Check if already connected
      if (window.solana?.isPhantom && window.solana?.isConnected) {
        connectWallet();
      }
    </script>
  </body>
