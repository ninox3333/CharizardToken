        box-shadow: 0 0.7rem 2rem rgba(255, 98, 0, 0.35);
      }

      .cta-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 1.1rem 2.6rem rgba(255, 111, 0, 0.38);
      }

      .cta-secondary {
        color: var(--brand-ember);
        border: 1px solid rgba(255, 191, 112, 0.4);
        background: rgba(37, 15, 42, 0.35);
      }

      main {
        display: grid;
        gap: 3rem;
        padding: 2.5rem 1.5rem 4rem;
        max-width: 1040px;
        width: 100%;
        margin: 0 auto;
        flex: 1;
      }

      section {
        background: var(--card-bg);
        border: 1px solid rgba(255, 153, 71, 0.18);
        border-radius: 22px;
        padding: 2.2rem 1.8rem;
        backdrop-filter: blur(14px);
        box-shadow: 0 1.4rem 3.4rem rgba(7, 0, 12, 0.4);
      }

      section h2 {
        font-size: clamp(1.6rem, 3.2vw, 2.2rem);
        margin: 0 0 1rem;
        letter-spacing: 0.03em;
      }

      .stat-grid {
        display: grid;
        gap: 1.4rem;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        margin-top: 1.6rem;
      }

      .stat {
        border-radius: 18px;
        background: rgba(23, 7, 32, 0.55);
        padding: 1.4rem 1.2rem;
        border: 1px solid rgba(255, 121, 48, 0.2);
      }

      .stat span:first-child {
        display: block;
        font-size: 0.9rem;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        color: rgba(255, 209, 102, 0.78);
      }

      .stat strong {
        display: block;
        font-size: 1.6rem;
        margin-top: 0.35rem;
        color: var(--text-primary);
      }

      ul {
        list-style: none;
        padding: 0;
        margin: 1.5rem 0 0;
        display: grid;
        gap: 0.9rem;
      }

      li {
        display: grid;
        grid-template-columns: auto 1fr;
        align-items: baseline;
        gap: 0.65rem;
        color: var(--text-muted);
      }

      li::before {
        content: "";
        width: 0.55rem;
        height: 0.55rem;
        border-radius: 999px;
        background: linear-gradient(135deg, var(--brand-ember), var(--brand-fire));
