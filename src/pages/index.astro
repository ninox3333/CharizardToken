        background: linear-gradient(135deg, #512da8, #8e24aa);
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 999px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.2s;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
      }

      .wallet-adapter-button:hover {
        filter: brightness(1.1);
        transform: translateY(-1px);
      }

      .buy-button-container {
        margin-top: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .btn-quick-buy {
        background: linear-gradient(90deg, #ff7930, #ff4c20);
        color: #100307;
        padding: 1rem;
        border-radius: 12px;
        font-weight: 800;
        text-transform: uppercase;
        border: none;
        cursor: pointer;
        font-size: 1.1rem;
        transition: all 0.2s;
        box-shadow: 0 4px 15px rgba(255, 76, 32, 0.3);
      }

