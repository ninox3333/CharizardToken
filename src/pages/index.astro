---
import Analytics from "@vercel/analytics/astro";

const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Charizard Token ($CHZ) is a hyper-fast, deflationary crypto asset igniting wealth for its holders."
    />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/logo.png" />
    <link rel="apple-touch-icon" href="/assets/logo.png" />
    <title>Charizard Token | $CHZ</title>
    <style>
      :root {
        color-scheme: dark;
        --bg-dark: #050309;
        --bg-glow: #140515;
        --bg-accent: radial-gradient(circle at top, rgba(255, 111, 28, 0.32), transparent 58%);
        --brand-fire: #ff7930;
        --brand-dragon: #ff4c20;
        --brand-ember: #ffd166;
        --text-primary: #f7f7ff;
        --text-muted: rgba(247, 247, 255, 0.7);
        --card-bg: rgba(17, 10, 26, 0.68);
        font-family: "Segoe UI", "Inter", "Roboto", system-ui, -apple-system, sans-serif;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        background: var(--bg-dark);
        color: var(--text-primary);
        line-height: 1.6;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background-image: var(--bg-accent),
          radial-gradient(circle at bottom, rgba(255, 69, 0, 0.14), transparent 60%);
        background-attachment: fixed;
        overflow-x: hidden;
      }

      header {
        padding: 3.5rem 1.5rem 2.5rem;
        text-align: center;
        position: relative;
      }

      header::before {
        content: "";
        position: absolute;
        inset: 10% 12%;
        background: linear-gradient(120deg, rgba(255, 121, 48, 0.18), rgba(56, 17, 71, 0.05));
        filter: blur(80px);
        z-index: -1;
      }

      .logo {
        width: min(320px, 80vw);
        max-width: 280px;
        height: auto;
        margin: 0 auto 1.5rem;
        display: block;
        filter: drop-shadow(0 0 1.5rem rgba(255, 90, 0, 0.3));
      }

      h1 {
        font-size: clamp(2.3rem, 5vw, 3.4rem);
        margin: 0.5rem 0;
        letter-spacing: 0.04em;
        text-transform: uppercase;
      }

      p {
        margin: 0.75rem auto;
        max-width: 640px;
        color: var(--text-muted);
      }

      .cta {
        margin-top: 1.75rem;
        display: flex;
        gap: 0.85rem;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap; /* Ensures buttons stack on small mobile screens */
      }

      .cta a {
        padding: 0.85rem 1.7rem;
        border-radius: 999px;
        font-weight: 600;
        letter-spacing: 0.02em;
        text-decoration: none;
        transition: transform 120ms ease, box-shadow 120ms ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
      }

      .buy-steps {
        margin: 2.4rem auto 0;
        padding: 2rem 2.2rem;
        border-radius: 24px;
        background: linear-gradient(165deg, rgba(46, 15, 60, 0.7), rgba(20, 5, 25, 0.85));
        border: 2px solid rgba(255, 121, 48, 0.4);
        width: min(600px, 94vw);
        text-align: left;
        box-shadow: 0 1.5rem 3.5rem rgba(255, 76, 32, 0.15), 0 1rem 2.4rem rgba(10, 0, 18, 0.35);
        position: relative;
        overflow: hidden;
      }

      .buy-steps::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle at center, rgba(255, 121, 48, 0.1) 0%, transparent 70%);
        pointer-events: none;
      }

      .badge-urgent {
        display: inline-block;
        background: linear-gradient(90deg, #ff4c20, #ff7930);
        color: #100307;
        padding: 0.3rem 0.8rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 800;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        margin-bottom: 0.8rem;
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.05); }
        100% { opacity: 1; transform: scale(1); }
      }

      .offer-highlight {
        color: var(--brand-ember);
        font-weight: 700;
        display: block;
        margin: 0.5rem 0;
        font-size: 1.1rem;
      }

      .big-win {
        background: rgba(76, 175, 80, 0.1);
        border: 2px dashed #4caf50;
        padding: 0.75rem;
        border-radius: 12px;
        margin: 1rem 0;
      }

      .buy-steps h3 {
        margin: 0 0 0.6rem;
        font-size: 1.1rem;
        letter-spacing: 0.03em;
        text-transform: uppercase;
        color: var(--brand-ember);
      }

      .buy-steps p {
        margin: 0.35rem 0;
        color: var(--text-muted);
      }

      .buy-steps code {
        font-family: "JetBrains Mono", "Fira Code", "SFMono-Regular", monospace;
        font-size: 0.95rem;
        color: var(--brand-ember);
        background: rgba(255, 121, 48, 0.1);
        padding: 0.2rem 0.4rem;
        border-radius: 8px;
        display: block;
        word-break: break-all;
        overflow-wrap: anywhere;
      }

      @media (max-width: 900px) {
        header {
          padding: 2.5rem 1rem 1.5rem;
        }

        main {
          padding: 1.5rem 1rem 2.5rem;
        }

        section {
          padding: 1.5rem 1rem;
        }

        .buy-steps {
          padding: 1.2rem 1.2rem;
          width: 96vw;
        }

        h1 {
          font-size: 2.1rem;
        }

        .big-win p {
          font-size: 0.85rem;
        }
      }

      /* Solana Integration Styles (Global) */
      .wallet-adapter-button {
        background: linear-gradient(135deg, #512da8, #8e24aa);
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 999px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.2s;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
      }

      .wallet-adapter-button:hover {
        filter: brightness(1.1);
        transform: translateY(-1px);
      }

      .buy-button-container {
        margin-top: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .btn-quick-buy {
        background: linear-gradient(90deg, #ff7930, #ff4c20);
        color: #100307;
        padding: 1rem;
        border-radius: 12px;
        font-weight: 800;
        text-transform: uppercase;
        border: none;
        cursor: pointer;
        font-size: 1.1rem;
        transition: all 0.2s;
        box-shadow: 0 4px 15px rgba(255, 76, 32, 0.3);
      }

      .btn-quick-buy:hover:not(:disabled) {
        transform: scale(1.02);
        box-shadow: 0 6px 20px rgba(255, 76, 32, 0.4);
      }

      .btn-quick-buy:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        filter: grayscale(1);
      }

      /* Modal Styles */
      .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(8px);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 1000;
      }

      .modal-content {
        background: #1a0b2e;
        border: 2px solid var(--brand-fire);
        padding: 2.5rem;
        border-radius: 24px;
        width: min(400px, 90vw);
        position: relative;
        box-shadow: 0 0 50px rgba(255, 121, 48, 0.2);
      }

      .modal-close {
        position: absolute;
        top: 1rem;
        right: 1.2rem;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--text-muted);
      }

      .input-group {
        margin: 1.5rem 0;
      }

      .input-group label {
        display: block;
        font-size: 0.8rem;
        text-transform: uppercase;
        color: var(--brand-ember);
        margin-bottom: 0.5rem;
      }

      .input-group input {
        width: 100%;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 0.8rem 1rem;
        border-radius: 12px;
        color: white;
        font-size: 1.2rem;
        outline: none;
      }

      .input-group input:focus {
        border-color: var(--brand-fire);
      }

      .conversion-display {
        text-align: center;
        margin: 1rem 0;
        padding: 1rem;
        background: rgba(255, 121, 48, 0.1);
        border-radius: 12px;
      }

      .status-message {
        margin-top: 1rem;
        font-size: 0.9rem;
        text-align: center;
        min-height: 1.4rem;
      }

      .cta-primary {
        background: linear-gradient(135deg, var(--brand-fire), var(--brand-dragon));
        color: #100307;
        box-shadow: 0 0.7rem 2rem rgba(255, 98, 0, 0.35);
      }

      .cta-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 1.1rem 2.6rem rgba(255, 111, 0, 0.38);
      }

      .cta-secondary {
        color: var(--brand-ember);
        border: 1px solid rgba(255, 191, 112, 0.4);
        background: rgba(37, 15, 42, 0.35);
      }

      main {
        display: grid;
        gap: 3rem;
        padding: 2.5rem 1.5rem 4rem;
        max-width: 1040px;
        width: 100%;
        margin: 0 auto;
        flex: 1;
      }

      section {
        background: var(--card-bg);
        border: 1px solid rgba(255, 153, 71, 0.18);
        border-radius: 22px;
        padding: 2.2rem 1.8rem;
        backdrop-filter: blur(14px);
        box-shadow: 0 1.4rem 3.4rem rgba(7, 0, 12, 0.4);
      }

      section h2 {
        font-size: clamp(1.6rem, 3.2vw, 2.2rem);
        margin: 0 0 1rem;
        letter-spacing: 0.03em;
      }

      .stat-grid {
        display: grid;
        gap: 1.4rem;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        margin-top: 1.6rem;
      }

      .stat {
        border-radius: 18px;
        background: rgba(23, 7, 32, 0.55);
        padding: 1.4rem 1.2rem;
        border: 1px solid rgba(255, 121, 48, 0.2);
      }

      .stat span:first-child {
        display: block;
        font-size: 0.9rem;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        color: rgba(255, 209, 102, 0.78);
      }

      .stat strong {
        display: block;
        font-size: 1.6rem;
        margin-top: 0.35rem;
        color: var(--text-primary);
      }

      ul {
        list-style: none;
        padding: 0;
        margin: 1.5rem 0 0;
        display: grid;
        gap: 0.9rem;
      }

      li {
        display: grid;
        grid-template-columns: auto 1fr;
        align-items: baseline;
        gap: 0.65rem;
        color: var(--text-muted);
      }

      li::before {
        content: "";
        width: 0.55rem;
        height: 0.55rem;
        border-radius: 999px;
        background: linear-gradient(135deg, var(--brand-ember), var(--brand-fire));
        box-shadow: 0 0 0.6rem rgba(255, 138, 41, 0.7);
        margin-top: 0.3rem;
      }

      .roadmap-grid {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        margin-top: 1.6rem;
      }

      .roadmap-card {
        padding: 1.4rem 1.2rem;
        border-radius: 18px;
        background: rgba(31, 9, 41, 0.55);
        border: 1px solid rgba(255, 111, 48, 0.18);
      }

      .roadmap-card h3 {
        margin: 0 0 0.6rem;
        font-size: 1.1rem;
        color: var(--brand-ember);
        letter-spacing: 0.03em;
        text-transform: uppercase;
      }

      footer {
        padding: 1.8rem 1.5rem 3rem;
        text-align: center;
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.55);
      }

      footer a {
        color: var(--brand-ember);
        text-decoration: none;
      }

      @media (max-width: 640px) {
        header {
          padding-top: 2.8rem;
        }

        .cta {
          flex-direction: column;
          width: min(320px, 100%);
          margin-left: auto;
          margin-right: auto;
        }

        section {
          padding: 1.8rem 1.4rem;
        }

        .buy-steps {
          width: 100%;
          padding: 1.4rem 1.3rem;
        }

        .buy-steps code {
          font-size: 0.88rem;
          word-break: break-word;
          overflow-wrap: anywhere;
        }

        .buy-steps p {
          margin: 0.45rem 0;
        }
      }
    </style>
  </head>
