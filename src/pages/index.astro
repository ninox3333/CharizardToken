        transform: scale(1.02);
        box-shadow: 0 6px 20px rgba(255, 76, 32, 0.4);
      }

      .btn-quick-buy:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        filter: grayscale(1);
      }

      /* Modal Styles */
      .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(8px);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 1000;
      }

      .modal-content {
        background: #1a0b2e;
        border: 2px solid var(--brand-fire);
        padding: 2.5rem;
        border-radius: 24px;
        width: min(400px, 90vw);
        position: relative;
        box-shadow: 0 0 50px rgba(255, 121, 48, 0.2);
      }

      .modal-close {
        position: absolute;
        top: 1rem;
